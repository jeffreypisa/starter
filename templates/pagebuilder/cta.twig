<section id="section{{ sectionno }}" class="pb-cta {{ item.achtergrond }}">
	<div class="fill-space">
		<div class="bg-cover" style="background-image: url({{ Image(item.afbeelding).src }})">
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-md-10 offset-md-1 col-xl-8 offset-xl-2 text-center">
				{% if item.subtitel %}
					<h6 class="sub mb-2"> {{ item.subtitel }} </h6>
				{% endif %}
				{% if item.titel %}
					<h2> {{ item.titel }} </h2>
				{% endif %}
				{% if item.tekst %}
					<p> {{ item.tekst }} </p>
				{% endif %}
			</div>
		</div>
    </div>
</section>