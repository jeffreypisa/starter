<section id="section{{ sectionno }}" class="pb-video {{ item.achtergrond }}">
	<div class="container-fluid container-md">
		<div class="row">
			<div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-md-center">
				{% if item.subtitel %}
					<h6 class="sub mb-2"> {{ item.subtitel }} </h6>
				{% endif %}
				{% if item.titel %}
					<h2> {{ item.titel }} </h2>
				{% endif %}
				{% if item.tekst %}
					<p> {{ item.tekst }} </p>
				{% endif %}
			</div>
		</div>
		<br>
		<div class="row">
			<div class="col-md-10 offset-md-1">
				<div class="video-container anime-fadein">
					{{ item.video }}
				</div>
			</div>
		</div>
		<div class="text-md-center">
			{% if item.link %}
				<br><br>
				<a class="btn btn-primary mb-0" href="{{ item.link.url }}" target="{{ item.link.target }}">{{ item.link.title }}</a>
			{% endif %}
		</div>
	</div>
</section>